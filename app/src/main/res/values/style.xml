<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar_text" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/id_123_456_789</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:searchHintIcon">@color/color_share</item>
        <item name="hintTextColor">@color/color_share</item>
        <item name="fontFamily">@font/inter</item>
        <item name="editTextColor">@color/white_60</item>
        <item name="android:textColor">@color/white_60</item>
        <item name="android:tint">@color/color_share</item>
        <item name="android:textSize">12sp</item>
        <item name="navigationIcon">@color/color_share</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="textViewRating">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="fontFamily">@font/inter</item>

    </style>

    <style name="alice_peterson">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:translationY">-1.11sp</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="title_language">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="choose_language">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/violet</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">1sp</item>

    </style>

    <style name="dream_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">5sp</item>

    </style>

    <style name="custom_btn" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeColor">@color/violet</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="moments_chronicles">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/violet</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:color">@color/violet</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="TextInputEditTextLayout">
        <item name="android:textColor">@color/button_text_white</item>
        <item name="android:textColorHint">@color/color_share</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_active_box_stroke_color</item>
        <item name="android:strokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="counterTextColor">@color/color_share</item>
        <item name="hintTextColor">@color/violet</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="thumbTint">@drawable/switch_custom_tumb</item>
        <item name="trackTint">@drawable/switch_custom_track</item>
    </style>

    <style name="ImageCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/grey</item>
        <item name="tabTextAppearance">@style/tab_text_style</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="tab_text_style">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_share</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>
</resources>